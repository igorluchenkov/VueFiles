.FilesItem
	border-radius 5px
	overflow hidden
	box-shadow 0px 30px 50px 0px rgba(116,127,137,0.14)
	display inline-block
	cursor pointer
	position absolute
	max-width 1150px
	user-select none
	&:hover
		.FilesItem-controls
			opacity 1
	&-name
		background-color #ffffff
		color #707070
		font-size 14px
		line-height 24px
		padding 6px 35px 6px 10px
	&-controls
		transition 0.1s
		background-color rgba(0,0,0, 0.6)
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		display flex
		align-items flex-start
		justify-content flex-end
		opacity 0
		pointer-events none
		svg
			width 25px
			height 25px
			margin 5px 5px
		* 
			pointer-events all